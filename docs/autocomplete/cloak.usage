cloak <COMMANDS> <OPTIONS>;

<COMMANDS> ::= (encrypt) "Encrypt a file"
			 | (decrypt) "Decrypt a file" 
			 | (hash) "Prints the hash of a file" 
			 ;

<OPTIONS> ::= (-h || --help) "Prints the help message"
			| (-v || --version) "Prints the project version"
            | (-k <PATH> || --key <PATH>) "Specify the encryption key path"
            | (-i <PATH> || --input <PATH>) "Specify the input path"
            | (-o <PATH> || --output <PATH>) "Specify the output path"
			;
